<div class="col-sm-6 col-md-4 col-lg-3 gallery-image">
  <%= link_to post do %>
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag post.picture, id:'post-index-image' %>
        <div>
          <h5><%= link_to "By #{stylist(post)}", profile_path(post.stylist) %></h5>
          <h6><%= post.get_likes.size %><i class="fa fa-heart pull-right" aria-hidden="true" style="color:#E56399"></i></h6>
        </div>
      </div>
    </div>
  <% end %>
</div>