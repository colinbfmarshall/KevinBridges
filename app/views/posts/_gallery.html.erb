<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0 col-md-3 col-md-offset-0 col-lg-3 col-lg-offset-0 gallery-image">
  <%= link_to post do %>
    <div class="panel panel-default" id="post-panel">
      <div class="panel-body">
        <%= image_tag post.picture, id:'post-index-image' %>
      </div>
      <div class="panel-footer" style="background: white;border: 0px;padding-top: 5px;padding-bottom: 0px">
      <div class="row">
        <div class="col-xs-6">
          <p><%= link_to "By #{stylist(post)}", profile_path(post.stylist) %></p>
        </div>
        <div class="col-xs-6"  style="text-align: right;padding:5px;padding-right:15px;">
          <span style="color:#777;"><%= post.get_likes.size %>&nbsp;</span>
          <%= link_to like_post_path(post), method: :put, "type" => "submit", "data-toggle" => "popover", "data-trigger" => "hover", "data-content" => "Love it!", "data-placement" => "top" do %>
          <i class="fa fa-heart" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>

      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $(function () {
    $('[data-toggle="popover"]').popover()
  })
</script>