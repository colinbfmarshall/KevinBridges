<div class="panel panel-default profile-panel">
  <div class="panel-body">
    <div class="col-md-3 col-sm-4 profile-panel-left">
      <%= image_tag @profile.profile_picture, id:'profile-picture' %>
    </div>
    <div class="col-md-7 col-sm-8 profile-panel-right">
      <h3><%= @profile.username %></h3>
      <p id='profile-name'><%= @profile.display_name %></p>
      <p id='profile-salon'><%= @profile.salon %></p>
      <p id='profile-location'><%= @profile.location %></p>
      <hr>
      <p><%= simple_format(@profile.about) %></p>
    </div>
    <div class="col-md-2 profile-panel-buttons">
      <% if owner(@profile) %> <%= link_to 'Edit', edit_profile_path(@profile), class:'btn btn-default' %> <% end %>
    </div>
  </div>
</div>

<hr>

<div>

  <%= render partial: 'posts/gallery', collection: @profile.user.posts, as: :post %>

</div>