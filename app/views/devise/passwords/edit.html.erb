<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Change your password</h4>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <% if @minimum_password_length %><em style="float:right">(<%= @minimum_password_length %> characters minimum)</em><% end %>
            <%= f.input :password, autofocus: true, autocomplete: "off" %>
            <%= f.input :password_confirmation, autocomplete: "off" %>
            <hr>
            <%= f.button :submit, 'Change my password', class:'btn-pink btn-block' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
