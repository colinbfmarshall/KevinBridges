<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Sign up</h4>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.input :category, collection: ['Stylist', 'Customer'], prompt: "Select account", label: 'Account Type', input_html: { class: 'form-control' } %>
            <%= f.input :email, autofocus: true %>
            <% if @minimum_password_length %><em style="float:right">(<%= @minimum_password_length %> characters minimum)</em><% end %>
            <%= f.input :password, autocomplete: "off" %>
            <%= f.input :password_confirmation, autocomplete: "off" %>
            <hr>
            <%= f.button :submit, 'Sign up', class:'btn-pink btn-block' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>